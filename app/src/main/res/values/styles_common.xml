<resources>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrap.Width0">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Wrap.Height0">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Wrap.WidthHeight0">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wide.Height0">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Tall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Tall.Width0">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Tall.Height0">
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="DividerHorizontal"
        parent="Wide">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="DividerVertical"
        parent="Wide.Height0">
        <item name="android:layout_width">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>