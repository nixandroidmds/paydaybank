<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    style="@style/MatchParent"
    tools:context=".view.activity.MainActivity"
    tools:layout_marginTop="?attr/actionBarSize">

    <FrameLayout style="@style/MatchParent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            style="@style/MatchParent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/holder_transaction" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/transactionsNotFountTextView"
            style="@style/Wrap"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            tools:text="@string/transactions_not_fount_pattern" />

    </FrameLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>